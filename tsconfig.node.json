{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "noEmit": false,
        "isolatedModules": false
    },
    "include": [
        "scripts/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "app",
        ".next"
    ]
}